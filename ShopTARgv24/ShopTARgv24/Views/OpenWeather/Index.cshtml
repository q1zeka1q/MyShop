@model ShopTARgv24.Models.OpenWeather.OpenWeatherSearchViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold" style="font-family: 'Poppins', sans-serif; color: #0d6efd;">
                        🌤️ Find Your City Forecast
                    </h2>
                    <form method="post" asp-action="searchCity" asp-controller="openWeather">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold" style="font-size: 1rem;">City name</label>
                            <input asp-for="Name" class="form-control form-control-lg rounded-3 border-primary-subtle shadow-sm" placeholder="Enter city name..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm" style="background: linear-gradient(90deg, #007bff, #00b4d8); border: none;">
                                🔍 Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <p class="text-center text-muted mt-3" style="font-size: 0.9rem;">
                Powered by OpenWeather 🌍
            </p>
        </div>
    </div>
</div>
