@model ShopTARgv24.Models.Accounts.LoginViewModel
@{
    ViewBag.Title = "User Login";
}

<div class="row">
    <div class="col-sm-6">
        <h1>Local Account Login</h1>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                Login
            </button>
            <div>
                <a asp-action="ForgotPassword">Forgot passsword?</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h1>External Login</h1>
        <hr />

        <form asp-controller="Accounts" asp-action="ExternalLogin" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
            <div>
                <button type="submit" class="btn btn-primary" name="provider" value="Google">
                    Google
                </button>
                <button type="submit" class="btn btn-primary" name="provider" value="Facebook">
                    <i class="fab fa-facebook"></i> Facebook
                </button>
            </div>
        </form>
    </div>
</div>