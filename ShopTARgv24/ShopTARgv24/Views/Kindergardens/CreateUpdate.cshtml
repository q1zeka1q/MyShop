@model ShopTARgv24.Models.Kindergardens.KindergardenCreateUpdateViewModel


@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}



<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden"/>
        <input asp-for="CreatedAt" type="hidden"/>
        <input asp-for="UpdatedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="GroupName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ChildrenCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="KindergardenName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KindergardenName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TeacherName" class="form-control" />
            </div>
        </div>

        <div class="form-group row m-3">
            <label asp-for="Files" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <div class="custom-file">
                    <input class="form-control" asp-for="Files" multiple type="file" />
                </div>
            </div>
        </div>
        <div>
            @foreach (var images in Model.Image)
            {
                <div class="d-flex align-items-center mb-3">
                    <partial name="_Images" model="images" />
                    <input asp-action="RemoveImage" asp-controller="Kindergardens" asp-route-imageId="@images.ImageId"
                           type="submit" class="btn btn-danger ms-3" value="Delete" />
                </div>
            }
        </div>

        <br />
        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="Kindergardens" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="Kindergardens" type="submit" class="btn btn-primary" value="Create" />
        }
        <a asp-action="Index" asp-controller="Kindergardens" class="btn btn-success">Back</a>

    </form>
</div>